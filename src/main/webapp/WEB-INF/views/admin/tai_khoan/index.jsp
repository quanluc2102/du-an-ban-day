                                    <strong> Trạng thái : </strong>
                                    <label style="margin-left: 20px">${tk.trangThai == true ? "Hoạt động" : "Ngưng hoạt động"}</label>
                                </div>

                            </form><!-- End Multi Columns Form -->


                        </div>

                    </div>
