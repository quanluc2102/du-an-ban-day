                        <div class="card-body">
                            <h5 class="card-title">Danh Sách Thông Tin Tài Khoản<span>| Taì Khoản</span></h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">UerName</th>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Địa chỉ</th>
                                    <th scope="col">Ngày Tạo</th>
                                    <th scope="col">Ảnh</th>
                                    <th scope="col">Trạng thái</th>

                                </tr>
                                </thead>
                                <tbody>
                                <c:forEach items="${listTK}" var="tk">
                                    <tr>
                                        <td scope="row">${tk.id}</td>
                                        <td>${tk.username}</td>
                                        <td>${tk.ten}</td>
                                        <td>${tk.diaChi}</td>
                                        <td>${tk.ngayTao}</td>
                                        <td><img src="/assets/img/${tk.anh}" height="100px" width="100px"></td>
                                        <td>${tk.trangThai == true ? "Hoạt động" : "Ngưng hoạt động"}</td>
                                        <td>
                                            <a href="/tai-khoan/delete/${tk.id}">Delete</a>
                                            <a href="/tai-khoan/detail/${tk.id}">Detail</a>
                                        </td>
                                    </tr>
                                </c:forEach>

                                </tbody>

